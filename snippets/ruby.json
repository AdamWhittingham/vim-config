
{
  "Initializer": {
    "prefix": ["defi"],
    "body": [
      "def initialize${1}",
      "\t$0",
      "end"
    ],
    "description": "Initializer"
  },

  "Private method": {
    "prefix": ["pdef"],
    "body": [
      "private def $0",
      "end"
    ],
    "description": "Private method definition"
  },

  "Class method": {
    "prefix": ["sdef"],
    "body": [
      "def self.${1}",
      "\t$0",
      "end"
    ],
    "description": "Initializer"
  },

  "Debug tap": {
    "prefix": ["tap"],
    "body": [
      "tap { |item| p item }"
    ],
    "description": "Inspect enumeration via tap"
  },

  "Frozen string literal": {
    "prefix": ["froz"],
    "body": [
      "# frozen_string_literal: true"
    ]
  },

  "Begin/Rescue block": {
    "prefix": ["rescue"],
    "body": [
      "begin",
      "\t${0}",
      "rescue ${1:StandardError} => ${2:e}",
      "end"
    ],
    "description": "Being/Rescue block"
  },

